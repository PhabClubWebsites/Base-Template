<style>
  .edit-img-container {
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    margin-bottom: 10px;
  }
  
  .edit-img-container a {
    margin-left: 10px;
  }
</style>
<div class="content">
  <div class="page-header">
    <h1>Website</h1>
  </div>
  


    <%= form_for(@club, html: {multipart: true, role: "form"}) do |f| %>
      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12">
          <h4>Images</h4>
          <p class="dashboard-p">Don't forget to click Update once you've selected your images.</p>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12">
          <div class="image-table-area">
            <div class="form-group">
              <%= f.label :club_logo %>
              <% if !club.blank? && !club.club_logo.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.club_logo.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "club_logo"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <%= f.file_field :club_logo %>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :bg_image, "Homepage Banner" %>
                <% if !club.blank? && !club.bg_image.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.bg_image.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "bg_image"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :bg_image %>  
              </div>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :news_banner_img, "News Banner" %>
                <% if !club.blank? && !@club.news_banner_img.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(@club.news_banner_img.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "news_banner_img"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :news_banner_img %>  
              </div>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :events_banner_img, "Events Banner" %>
                <% if !club.blank? && !club.events_banner_img.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.events_banner_img.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "events_banner_img"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :events_banner_img %>  
              </div>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :gallery_banner_img, "Gallery Banner" %>
              <% if !@club.gallery_banner_img.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.gallery_banner_img.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "gallery_banner_img"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :gallery_banner_img %>  
              </div>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :contact_banner_img, "Contact Banner" %>
              <% if !club.blank? && !@club.contact_banner_img.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.contact_banner_img.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "contact_banner_img"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :contact_banner_img %>  
              </div>
            </div>
            <hr style="border-top: 1px solid white;"></hr>
            <div class="form-group">
              <%= f.label :about_banner_img, "About Banner" %>
              <% if !club.blank? && !@club.about_banner_img.blank? %>
                <div class="edit-img-container">
                  <%= image_tag(club.about_banner_img.url(:thumb), class:"thumbnail", style:"margin-bottom: 0px !important;") %>
                  <%= link_to 'Delete', remove_image_club_path(id: @club.id, item: "about_banner_img"), method: :put, data: 
                              {confirm: "Are you sure you want to delete this picture?"}, class:"btn btn-md btn-danger" %>
                </div>
              <% end %>
              <div style="margin-top: 10px;">
                <%= f.file_field :about_banner_img %>  
              </div>
            </div>
          </div>  
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Update Website", class:"btn btn-phab btn-md" %>
      </div>
    <% end %>
</div>