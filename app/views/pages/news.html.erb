<% if !club.news_banner_img.blank? %>
    <%= render partial: "page-header", locals: { bg_img: club.news_banner_img, title: news_header, color: "#3D3976" } %>
<% end %>

<div class="container-fluid pipe-container <% if club.news_banner_img.blank? %>page-show<% end %>" id="container_news">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="outer-well">
                    <% if !@news_pages.blank? %>
                        <% @news_pages.each_with_index do |news, i| %>
                            <%= render "article_preview", obj: news %>
                        <% end %>
                        <div class="apple_pagination">
                          <%= will_paginate @news_pages, :container => false, :previous_label => prev_page_button, :next_label => next_page_button  %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <%= render 'layouts/page_sidebar' %>
            </div>
        </div>
    </div>
</div>
